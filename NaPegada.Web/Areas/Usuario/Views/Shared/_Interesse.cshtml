@model NaPegada.Model.InteresseMOD
@{
    ViewBag.Title = "Interesse";
}


@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        <label for="Raca">Raca</label>
        @Html.TextBoxFor(u => u.raca, new { @class = "form-control" })
    </div>
    
     <div class="form-group">
        <label for="IdadeMax">Idade Max.</label>
        @Html.TextBoxFor(u => u.IdadeMaximaEmAnos, new { @class = "form-control" })
    </div>
    
     <div class="form-group">
         <label for="IdadeMin">Idade Min.</label>
        @Html.TextBoxFor(u => u.IdadeMinimaEmAnos, new { @class = "form-control" })
    </div>
    
     <div class="form-group">
        <label for="Especie">Especie</label>
        @Html.TextBoxFor(u => u.Especie, new { @class = "form-control" })
    </div>
    
    
     <button class="btn btn-success" type="submit">Cadastrar</button>
     
    
}