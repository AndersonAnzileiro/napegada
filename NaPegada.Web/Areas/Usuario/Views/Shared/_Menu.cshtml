@model NaPegada.Web.Models.UsuarioViewModel

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#menu-usuario">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand">Na Pegada</a>
        </div>
        <div class="collapse navbar-collapse" id="menu-usuario">
            <ul class="nav navbar-nav">
                <li><a href="#">Link</a></li>
            </ul>
            @using (Ajax.BeginForm("Pesquisar", "Usuario", new AjaxOptions 
            {
                UpdateTargetId = "resultado-pesquisa",
                InsertionMode = InsertionMode.Replace,
                HttpMethod = "POST"
            }, new { @class = "navbar-form navbar-left", @role = "search" }))
            {
                <div class="form-group">
                    @Html.TextBox("dadosPesquisa", null, new { @class = "form-control", @placeholder = "Pesquisar..." })
                </div>
                <button type="submit" class="btn btn-default">
                    <span class="glyphicon glyphicon-search"></span>
                </button>
            }
            <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">@Model.Nome<span class="caret"></span></a>
                    <ul class="dropdown-menu" role="menu">
                        <li><a href="@Url.Action("MeuPerfil", "Usuario", new { id = Model.Id })">Ver perfil</a></li>
                        <li>@Html.ActionLink("Sair", "Sair", "Usuario")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</nav>