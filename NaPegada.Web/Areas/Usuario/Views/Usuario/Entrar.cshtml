@model NaPegada.Web.Models.UsuarioViewModel
@{
    ViewBag.Title = "Entrar";
}

<div class="container">

    <div class="form-register">

        <div>
            @if (TempData["sucesso"] != null)
            {
                @Html.Partial("_Sucesso")
            }
        </div>

        <h2 class="text-center">Entrar</h2>
        @using (Html.BeginForm("Entrar", "Usuario", FormMethod.Post, new { @class = "form" }))
        {
            <fieldset>
                <div class="form-group">
                    <label for="User_Mail">Seu endereço de e-mail</label>
                    @Html.TextBoxFor(u => u.Usuario.Email, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="User_Mail">Criar uma senha</label>
                    @Html.PasswordFor(u => u.Usuario.Senha, new { @class = "form-control" })
                </div>
                <div class="checkbox">
                    <label>
                        @Html.CheckBoxFor(u => u.Usuario.MantenhaMeConectado) Mantenha-me conectado.
                    </label>
                </div>

                <button type="submit">Entrar</button>
                <div class="forgot">
                    <p>
                        <a href="">Esqueceu a senha?</a>
                    </p>
                </div>
            </fieldset>
        }
    </div>
    <div class="text-center already">
        <p>Não possui uma conta?</p>
        <h4>
            @Html.ActionLink("Crie uma conta", "Registrar", "Usuario")
        </h4>
    </div>
</div>