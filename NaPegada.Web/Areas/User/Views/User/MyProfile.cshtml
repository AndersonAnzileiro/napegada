@model NaPegada.Web.Models.UserViewModel
@{
    ViewBag.Title = "Profile";
}
<div class="page-header">
    @Html.Partial("_Menu")
</div>
<div class="container">
    @using (Html.BeginForm("UpdateProfile", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(u => u.User.Id)
        @Html.HiddenFor(u => u.User.Mail)
        <div class="form-group">
            <label for="User_Name" class="col-sm-2 control-label">Nome:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.User.Name, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <label for="User_Password" class="col-sm-2 control-label">Senha:</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(u => u.User.Password, new { @class = "form-control" })
            </div>
        </div>
        
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                <button type="submit" class="btn btn-success">Salvar alterações</button>
            </div>
        </div>
    }
</div>
