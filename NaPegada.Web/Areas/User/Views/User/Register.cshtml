@model NaPegada.Web.Models.UserViewModel
@{
    ViewBag.Title = "Register";
}

<div class="container">
    <div class="form-register">
        <h2 class="text-center">Crie uma conta</h2>
        @using (Ajax.BeginForm("Register", "User", new AjaxOptions { }, new { @class = "form" }))
        {
            @Html.AntiForgeryToken()
            <fieldset>
                <div class="form-group">
                    <label for="User_Mail">Seu endereço de e-mail</label>
                    @Html.TextBoxFor(u => u.User.Mail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label for="User_Mail">Criar uma senha</label>
                    @Html.PasswordFor(u => u.User.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <p class="help-block">
                        Ao clicar em Criar conta, concordo com os
                        <a>Termos de Serviço</a> e a <a>Política de Privacidade</a>.
                    </p>
                </div>
                <button type="submit">Criar conta</button>
            </fieldset>
        }
    </div>
    <div class="text-center already">
        <p>Já possui uma conta?</p>
        <h4>
            @Html.ActionLink("Entrar", "LogIn", "User")
        </h4>
    </div>
</div>
