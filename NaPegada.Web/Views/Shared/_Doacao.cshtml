@model NaPegada.Web.Models.Doacao.DetalhesViewModel

@using (Html.BeginForm("Detalhes", "Doacao", FormMethod.Post, new { @class = "form", enctype = "multipart/form-data", id = "form-doacao" }))
{
    @Html.HiddenFor(d => d.Id)
    
    <div class="form-group">
        <label for="Nome">Nome</label>

        @Html.TextBoxFor(d => d.Nome, new { @class = "form-control", id = "nome" })
        <p class="help-block">@Html.ValidationMessageFor(_ => _.Nome)</p>
    </div>
    <div class="form-group">
        <label for="Especie">Espécie</label>

        @Html.EnumDropDownListFor(d => d.Especie, "Selecione uma espécie", new { @class = "form-control", id = "especie" })
        <p class="help-block">@Html.ValidationMessageFor(_ => _.Especie)</p>
    </div>
    <div class="form-group">
        <label for="raca">Raça</label>

        @Html.DropDownListFor(d => d.Raca, Model.Racas, "Selecione uma espécie", new { @class = "form-control", id = "raca" })
    </div>
    <div class="form-group">
        <label for="Porte">Porte</label>

        @Html.EnumDropDownListFor(d => d.Porte, "Selecione um porte", new { @class = "form-control" })
        <p class="help-block">@Html.ValidationMessageFor(_ => _.Porte)</p>
    </div>    
    <div>
        <fieldset title="Idade">
            <div class="row">
                <div class="form-group col-xs-6">
                    <label for="Anos">Anos</label>
                    @Html.TextBoxFor(d => d.Anos, new { @class = "form-control" })
                    <p class="help-block">@Html.ValidationMessageFor(_ => _.Anos)</p>
                </div>
                <div class="form-group col-xs-6">
                    <label for="Anos">Meses</label>
                    @Html.TextBoxFor(d => d.Meses, new { @class = "form-control" })
                    <p class="help-block">@Html.ValidationMessageFor(_ => _.Meses)</p>
                </div>
            </div>            
        </fieldset>
    </div>    
    
    <label>Informação Extra:</label>
    <div class="form-group">
        <div class="row">
            <div class="col-sm-4">
                <div class="input-group ">
                    <span class="input-group-addon">
                        @Html.CheckBoxFor(d => d.EhVacinado)
                    </span>
                    <input type="text" class="form-control" disabled value="Vacinado">
                </div>
            </div>

            <div class="col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon">
                        @Html.CheckBoxFor(d => d.EhCastrado)
                    </span>
                    <input type="text" class="form-control" disabled value="Castrado">
                </div>
            </div>

            <div class="col-sm-4">
                <div class="input-group">
                    <span class="input-group-addon">
                        @Html.CheckBoxFor(d => d.TomouVermifugo)
                    </span>
                    <input type="text" class="form-control" disabled value="Vermífugo">
                </div>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input name="Fotos" id="fotos" type="file" multiple class="form-control" size="5000000" accept="image/jpg, image/png" />
        <p class="help-block" id="fotos-erro" style="display: none"></p>
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        
        @if (@Model.Id != null)
        {
            <button class="btn btn-primary" type="button" id="salvar-doacao">Atualizar</button>
        }
        else
        {
            <button class="btn btn-primary" type="button" id="salvar-doacao">Cadastrar</button>
        }

    </div>
}

<script type="text/javascript" src="~/Scripts/Doacao/_detalhes.js"></script>