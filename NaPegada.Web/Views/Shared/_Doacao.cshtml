@model NaPegada.Web.Models.Doacao.DetalhesViewModel

@using (Html.BeginForm("Detalhes", "Doacao", FormMethod.Post, new { @class = "form" }))
{
    @Html.HiddenFor(d => d.Id)
    
    <div class="form-group">
        <label for="Nome">Nome</label>

        @Html.TextBoxFor(d => d.Nome, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Especie">Espécie</label>

        @Html.EnumDropDownListFor(d => d.Especie, "Selecie uma espécie", new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Raça">Raça</label>

        <select class="form-control">
            <option>Selecione uma espécie</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Porte">Porte</label>

        @Html.EnumDropDownListFor(d => d.Porte, "Selecione um porte", new { @class = "form-control" })
    </div>    
    <div>
        <fieldset title="Idade">
            <div class="row">
                <div class="form-group col-xs-6">
                    <label for="Anos">Anos</label>
                    @Html.TextBoxFor(d => d.Anos, new { @class = "form-control" })
                </div>
                <div class="form-group col-xs-6">
                    <label for="Anos">Meses</label>
                    @Html.TextBoxFor(d => d.Meses, new { @class = "form-control" })
                </div>
            </div>            
        </fieldset>
    </div>    
    @*<div class="checkbox">                
       <label>
        @Html.CheckBoxFor(d => d.EhVacinado)
           Vacinado
       </label>
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(d => d.EhCastrado)
            Castrado
        </label>
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(d => d.TomouVermifugo)
            Vermifugo
        </label>
    </div>*@
    <label>Informação Extra:</label>
    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon">
                   @Html.CheckBoxFor(d => d.EhVacinado)
                </span>
                <input type="text" class="form-control" disabled value="Vacinado">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon">
                    @Html.CheckBoxFor(d => d.EhCastrado)
                </span>
                <input type="text" class="form-control" disabled value="Castrado">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon">
                    @Html.CheckBoxFor(d => d.TomouVermifugo)
                </span>
                <input type="text" class="form-control" disabled value="Vermífugo">
            </div>
        </div>

    </div>

    <div class="form-form-group">
        <label></label>
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        
        @if (@Model.Id != null)
        {


            <button class="btn btn-primary" type="submit">Atualizar</button>
        }
        else
        {

            <button class="btn btn-primary" type="submit">Cadastrar</button>

        }

    </div>
}