@model NaPegada.Web.Models.Doacao.ExclusaoViewModel

<p>
    Deseja realmente excluir a doação do(a) @Model.NomeAnimal ?
</p>

<div class="form-group text-right">
    @using (Html.BeginForm("Excluir", "Doacao", FormMethod.Post))
    {
        @Html.HiddenFor(_ => _.Id)
        
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button class="btn btn-danger" type="submit">Sim</button>
    }        
</div>
