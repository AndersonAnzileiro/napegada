@model NaPegada.Web.Models.InteresseViewModel


@using (Html.BeginForm("CadastrarInteresse", "Usuario", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        <label for="Especie">Espécie</label>
        
        
            @Html.TextBoxFor(u => u.Interesse.Especie , new { @class = "form-control" })
        
    </div>

    <div class="form-group">
        <label for="Raca">Raca</label>
        @Html.TextBoxFor(u => u.Interesse.Raca, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="IdadeMin" class="col-sm-2">Idade Min.</label>

        <div class="col-sm-4">
            @Html.TextBoxFor(u => u.Interesse.IdadeMinimaEmAnos, new { @class = "form-control" })
        </div>
        
        <label for="IdadeMax" class="col-sm-2">Idade Max.</label>
        
        <div class="col-sm-4">
            @Html.TextBoxFor(u => u.Interesse.IdadeMaximaEmAnos, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label></label>
    </div>
 
    
    <div class="form-group text-right">
        <button class="btn btn-success" type="submit">Cadastrar</button>
    </div>

}