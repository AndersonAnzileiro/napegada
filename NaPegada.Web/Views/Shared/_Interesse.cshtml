@model NaPegada.Web.Models.InteresseViewModel


@using (Html.BeginForm("CadastrarInteresse", "Usuario", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        <label for="Especie">Espécie:</label>
        @Html.TextBoxFor(i => i.Interesse.Especie, new { @class = "form-control" })

    </div>

    <div class="form-group">
        <label for="Raca">Raca:</label>
        @Html.TextBoxFor(i => i.Interesse.Raca, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="IdadeMin" class="col-sm-1">Idade Min:</label>

        <div class="col-sm-5">
            @Html.TextBoxFor(i => i.Interesse.IdadeMinimaEmAnos, new { @class = "form-control" })
        </div>

        <label for="IdadeMax" class="col-sm-1">Idade Max:</label>

        <div class="col-sm-5">
            @Html.TextBoxFor(i => i.Interesse.IdadeMaximaEmAnos, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label></label>
    </div>


    <label>Porte:</label>
    <div class="form-group">

        <div class="col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon">
                    <input type="checkbox" />
                </span>
                <input type="text" class="form-control" disabled value="Pequeno">
            </div>
        </div>
        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon">
                    <input type="checkbox" />
                </span>
                <input type="text" class="form-control" disabled value="Médio">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon">
                    <input type="checkbox" />
                </span>
                <input type="text" class="form-control" disabled value="Grande">
            </div>
        </div>
    </div>

     <div class="form-group">
        <label></label>
    </div>
    
    <label>Informação Extra:</label>
    <div class="form-group">
        <div class="col-sm-4">
            <div class="input-group ">
                <span class="input-group-addon">
                    @Html.CheckBoxFor(i => i.Interesse.EhVacinado)
                </span>
                <input type="text" class="form-control" disabled value="Vacinado">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon">
                    @Html.CheckBoxFor(i => i.Interesse.EhCastrado)
                </span>
                <input type="text" class="form-control" disabled value="Castrado">
            </div>
        </div>

        <div class="col-sm-4">
            <div class="input-group">
                <span class="input-group-addon">
                    @Html.CheckBoxFor(i => i.Interesse.TomouVermifugo)
                </span>
                <input type="text" class="form-control" disabled value="Vermífugo">
            </div>
        </div>

    </div>
    
    <div class="form-group">
        <label></label>
    </div>


    <div class="form-group text-right">
        <button class="btn btn-success" type="submit">Cadastrar</button>
    </div>
  
}