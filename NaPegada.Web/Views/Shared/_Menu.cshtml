@if (HttpContext.Current.Session["napegada_auth"] == null)
{
    <div class="navbar navbar-default menu">
        <ul class="nav navbar-nav">
            <li class="dropdown active">
                <a class="dropdown-toggle" data-toggle="dropdown"><h5>Menu &nbsp; <b class="caret"></b></h5></a>
                <ul class="dropdown-menu">
                    <li><a id="btn-modal-entrar" data-toggle="modal" data-target="#modal-entrar"><h6>Entrar</h6></a></li>
                    <li><a id="btn-modal-registrar" data-toggle="modal" data-target="#modal-cadastrar"><h6>Cadastrar</h6></a></li>
                </ul>
            </li>
        </ul>
    </div>
    @Html.Partial("_Entrar")
    @Html.Partial("_Registrar")
}
else
{
    <nav class="navbar navbar-default menu" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-menu">
                    <span class="sr-only">Menu</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand">Na Pegada &raquo;</a>
            </div>
            <div class="collapse navbar-collapse" id="bs-menu">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("MeusInteresses", "Usuario")">Meus Interesses</a></li>
                    <li><a href="@Url.Action("MinhasDoacoes", "Usuario")">Minhas Doações</a></li>
                </ul>
                <form class="navbar-form navbar-left" role="search">
                    <div class="row">
                        <div class="col-lg-12">
                            <div class="input-group">
                                <input type="text" class="form-control" placeholder="Procurar...">
                                <span class="input-group-btn">
                                    <button class="btn btn-default" type="button">
                                        <span class="glyphicon glyphicon-search"></span>
                                    </button>
                                </span>
                            </div>
                        </div>
                    </div>
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li class="dropdown">
                        <a class="dropdown-toggle" data-toggle="dropdown">Minhas Opções <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a data-toggle="modal" data-target="#modal-perfil" id="btn-modal-perfil">Meu Perfil</a></li>
                            <li><a id="btn-sair">Sair</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    
    @Html.Partial("_MeuPerfil")
}
