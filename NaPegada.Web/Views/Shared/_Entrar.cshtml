@model NaPegada.Web.Models.UsuarioViewModel
@{
    ViewBag.Title = "Entrar";
}



<div>
    @if (TempData["sucesso"] != null)
    {
        @Html.Partial("_Sucesso")
    }
</div>

<h2>Entrar</h2>
@using (Html.BeginForm("Entrar", "Usuario", FormMethod.Post, new { @class = "form" }))
{

    <div class="form-group">
        <label for="Email">Seu endereço de e-mail</label>
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Senha">Criar uma senha</label>
        @Html.PasswordFor(u => u.Senha, new { @class = "form-control" })
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(u => u.ManterConectado) Mantenha-me conectado.
        </label>
    </div>

    <button class="btn btn-success" type="submit">Entrar</button>


}
