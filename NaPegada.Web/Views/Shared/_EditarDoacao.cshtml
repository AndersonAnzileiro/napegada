@model NaPegada.Web.Models.UsuarioViewModel

@using (Html.BeginForm("", "", FormMethod.Post, new { @class = "form" }))
{
    <div class="form-group">
        <label for="Nome">Nome</label>

        @Html.TextBoxFor(d => d.Doacao.NomeAnimal, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Raça">Raça</label>

        @Html.TextBoxFor(d => d.Doacao.RacaAnimal, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Porte">Porte</label>

        <select class="form-control" id="porte">
            <option selected="selected">Selecione...</option>
            <option value="pequeno">Pequeno</option>
            <option value="medio">Médio</option>
            <option value="grande">Grande</option>
        </select>
        <br />
    </div>
    <div class="form-group">
        <label for="Especie">Espécie</label>

        @Html.TextBoxFor(d => d.Doacao.EspecieAnimal, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label for="Idade">Idade</label>

        @Html.TextBoxFor(d => d.Doacao.IdadeAnimal, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.CheckBoxFor(d => d.Doacao.EhVacinado)
        <label for="Vacinado">Vacinado</label><br />
    </div>
    <div class="form-group">

        @Html.CheckBoxFor(d => d.Doacao.EhCastrado)
        <label for="Castrado">Castrado</label><br />
    </div>
    <div class="form-group">

        @Html.CheckBoxFor(d => d.Doacao.TomouVermifugo)
        <label for="Vermifugo">Vermifugo</label>
    </div>

    <div class="form-group">
        <label></label>
    </div>

    <div class="form-group text-right">
        <button type="button" class="btn btn-default" data-dismiss="modal">Cancelar</button>
        <button class="btn btn-success" type="submit">Salvar</button>
    </div>
}
