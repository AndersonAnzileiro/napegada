<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Na Pegada - @ViewBag.Title</title>
    @Styles.Render("http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css", 
                   "http://bootswatch.com/sandstone/bootstrap.min.css")
    @RenderSection("styles", false)
</head>
<body>
    <div class="page-header">
        @Html.Partial("_Menu")
    </div>
    <div class="container">
        @RenderBody()
    </div>
    @Scripts.Render("http://code.jquery.com/jquery-1.9.1.min.js",
                    "http://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js")
    @RenderSection("scripts", false)
</body>
</html>