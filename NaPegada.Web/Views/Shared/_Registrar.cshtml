@model NaPegada.Web.Models.UsuarioViewModel
@{
    ViewBag.Title = "Registrar";
}


<h2>Crie uma conta</h2>
@using (Html.BeginForm("Registrar", "Usuario", FormMethod.Post, new { @class = "form" }))
{
    @Html.AntiForgeryToken()
    @*@Html.ValidationSummary(false)*@

    <div class="form-group">
        <label for="Email">Seu endereço de e-mail</label>
        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(u => u.Email)*@
    </div>
    <div class="form-group">
        <label for="Senha">Criar uma senha</label>
        @Html.PasswordFor(u => u.Senha, new { @class = "form-control" })
        @*@Html.ValidationMessageFor(u => u.Senha)*@
    </div>
    <div class="form-group">
        <p class="help-block">
            Ao clicar em Criar conta, concordo com os
            <a>Termos de Serviço</a> e a <a>Política de Privacidade</a>.
        </p>
    </div>
    <button class="btn btn-success" type="submit">Criar conta</button>

}
