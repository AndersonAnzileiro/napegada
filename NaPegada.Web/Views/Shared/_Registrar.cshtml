@model NaPegada.Web.Models.Usuario.RegistroEhLoginViewModel
<!-- Modal - Cadastrar usuario -->
<div class="modal fade" id="modal-cadastrar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">Registrar</h4>
            </div>
            <div class="modal-body">
                <h2>Faça seu registro</h2>
                <hr />
                <div class="msg"></div>
                <form id="frm-usuario-registrar" class="form">
                    <div class="form-group">
                        @Html.LabelFor(u => u.Email)
                        @Html.ValidationMessageFor(u => u.Email)
                        @Html.TextBoxFor(u => u.Email, new { @id="u-email", @class = "form-control" }) 
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.Senha)
                        @Html.ValidationMessageFor(u => u.Senha)
                        @Html.PasswordFor(u => u.Senha, new { @id = "u-senha", @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <p class="help-block">
                            Ao clicar em Criar conta, concordo com os
                            <a>Termos de Serviço</a> e a <a>Política de Privacidade</a>.
                        </p>
                    </div>
                    <button id="btn-registrar" class="btn btn-success" type="submit">Criar conta</button>
                    <span class="load"></span>
                </form>
            </div>
        </div>
    </div>
</div>